<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".improve.leak.LeakActivity">

    <Button
        android:id="@+id/btnManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不当引用单例传入context" />

    <Button
        android:id="@+id/btnHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler使用不当" />

    <Button
        android:id="@+id/btnThreads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thread未正确关闭" />


    <Button
        android:id="@+id/btnWindowFocus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WindowFocus监听" />

    <Button
        android:id="@+id/btnAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动画" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>