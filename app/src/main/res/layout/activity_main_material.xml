<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".materialdesign.MainMaterialActivity">

    <Button
        android:id="@+id/btnAppBar"
        android:text="AppBarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnAppBar2"
        android:text="AppBarLayout2(使用CollapsingToolbarLayout)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnTitleBar"
        android:text="TitleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnNested"
        android:text="Nested嵌套"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnFloatingButton"
        android:text="FloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnBehaviorMain"
        android:text="BehaviorMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>