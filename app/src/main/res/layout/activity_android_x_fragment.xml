<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".component.fragment.androidx.AndroidXFragmentActivity">

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建-Create状态" />

    <Button
        android:id="@+id/btnResumed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建-Resumed状态" />


    <Button
        android:id="@+id/btnStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建-Start状态" />


    <Button
    android:id="@+id/btnStartAlready"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="创建-Start已建立状态" />

    <Button
        android:id="@+id/btnNewLazy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新的懒加载lazyLoad" />


    <Button
        android:id="@+id/btnResumedAlready"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="继续执行Resumed状态" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
</LinearLayout>